<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorP</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:layout_width">@dimen/standart_size_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_height">@dimen/standart_size_button</item>
    </style>

    <style name="EditTextWithPinkCursor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/cursor_pink</item>
    </style>


    <style name="TabTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#c5d1e5</item>
        <item name="android:textSize">16dp</item>
        <item name="colorAccent">@color/blue_dark</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">17sp</item>

        <item name="android:textCursorDrawable">@drawable/cursor_pink</item>
    </style>

    <style name="BarcodeImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp
        </item>
    </style>

    <style name="BarcodeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/delimeter_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BarcodeLayoutStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">@dimen/material_big</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/material_huge</item>
        <item name="android:paddingEnd">@dimen/material_huge</item>
        <item name="android:paddingTop">@dimen/margin_material</item>
        <item name="android:paddingBottom">@dimen/margin_material</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">@dimen/login_lo_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_lo_margin</item>
    </style>

    <style name="BarcodeButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/delimeter_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/delimeter_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.StoryButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/upvote_gray</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleUserNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_material_half</item>
        <item name="android:gravity">top|start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.BlogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_material_half</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_82</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.VoteButton">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/gray_4f</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="PouchTVStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">@dimen/material_huge</item>
    </style>

    <style name="ProfileTvNumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rect_round_corners_outline_gray</item>
        <item name="android:paddingStart">@dimen/material_big</item>
        <item name="android:paddingEnd">@dimen/material_big</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileLinearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rect_round_corners_outline_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_material</item>
        <item name="android:paddingStart">@dimen/margin_material</item>
    </style>

    <style name="ProfileNumberStyle">
        <item name="android:textSize">16sp</item>

    </style>
    <style name="ProfileCurrensyStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minHeight">54dp</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray_7d</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ProfileNumLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray_4f</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
