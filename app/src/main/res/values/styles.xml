<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorP</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>

    <style name="GolosDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NotificationsDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/semi_semi_black</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GolosPhotoDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/semi_black</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_back</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:layout_width">@dimen/standart_size_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditTextWithPinkCursor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>
        <item name="android:textColorHint">@color/gray_82</item>
        <item name="android:textColor">@color/textColorP</item>
    </style>


    <style name="TabTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#c5d1e5</item>
        <item name="android:textSize">16dp</item>
        <item name="colorAccent">@color/blue_dark</item>
    </style>

    <style name="TagsAndUserTabTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#c5d1e5</item>
        <item name="android:textSize">14dp</item>
        <item name="colorAccent">@color/blue_dark</item>
    </style>

    <style name="HelperDialogStyle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/gray_82</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>
    </style>

    <style name="BarcodeImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp
        </item>
    </style>

    <style name="BarcodeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:textColorHint">@color/gray_82</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BarcodeLayoutStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">@dimen/material_big</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/material_huge</item>
        <item name="android:paddingEnd">@dimen/material_huge</item>
        <item name="android:paddingTop">@dimen/margin_material</item>
        <item name="android:paddingBottom">@dimen/margin_material</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">@dimen/login_lo_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_lo_margin</item>
    </style>

    <style name="BarcodeButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/delimeter_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/delimeter_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.StoryButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/upvote_gray</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleUserNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_material_half</item>
        <item name="android:gravity">top|start</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.BlogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_material_half</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_82</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="VoteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="PouchTVStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:layout_marginTop">@dimen/material_huge</item>
    </style>

    <style name="ProfileTvNumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:drawablePadding">10dp</item>

        <item name="android:paddingStart">@dimen/material_big</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileLinearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rect_round_corners_outline_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_material</item>
        <item name="android:paddingStart">@dimen/margin_material</item>
    </style>

    <style name="ProfileNumberStyle">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="ProfileCurrensyStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ProfileNumLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FollowButtonPosition">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="StorySubscribeButtonSize">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.AddButtonBluePlus">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">@dimen/margin_material</item>
        <item name="android:layout_marginTop">@dimen/margin_material_small</item>
        <item name="android:background">@drawable/rect_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="FullscreenProgressStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TagStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/tags_reycler_height</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="FilteredScreenSubButtonLo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_material</item>
        <item name="android:layout_marginTop">@dimen/margin_material</item>
        <item name="android:background">@drawable/rect_blue_round_corners_16dp</item>
    </style>

    <style name="TagListStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/margin_material_small</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.StorySubButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">108dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:background">@drawable/shape_rect_gray_stroke_108dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StoryBottomControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:paddingEnd">@dimen/margin_material_half</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="SettingTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginAdviceTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/quater</item>
    </style>

    <style name="StripeTitle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ControlsTextStyle">
        <item name="android:textColor">@color/textColorP</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.VoteDialogButton">
        <item name="android:layout_gravity">end</item>

        <item name="android:paddingEnd">@dimen/material_huge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@color/textColorP</item>
    </style>

    <style name="SettingTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#8c8c8c</item>
    </style>
</resources>
