<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/white_black_toolbar_color"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_confirm_38_28"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/material_big"
        android:text="@string/repost_done"
        android:textColor="@color/font_gray_black"
        android:textSize="@dimen/font_big"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_big"
        android:layout_marginEnd="@dimen/material_big"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:text="@string/now_repost_will_appear"
        android:textColor="@color/font_gray_black"
        android:textSize="14sp"/>
</LinearLayout>