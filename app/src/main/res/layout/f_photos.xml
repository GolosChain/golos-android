<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <io.golos.golos.screens.widgets.dialogs.PhotosPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent">

    </io.golos.golos.screens.widgets.dialogs.PhotosPager>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        app:navigationIcon="@drawable/ic_chevron_left_white_32dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/indicator_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="@dimen/material_big"
        android:layout_marginStart="@dimen/material_big"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/material_big"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/margin_material_half"
        app:srcCompat="@drawable/ic_share_white_24dp" />
</RelativeLayout>
