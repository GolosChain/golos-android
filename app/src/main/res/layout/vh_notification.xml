<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_height"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/material_big"


            app:riv_oval="true" />

        <ImageView
            android:id="@+id/image_iv_second"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/material_big"
            android:background="@drawable/shape_round_36dp_dark_blue"
            android:scaleType="center"
            android:src="@drawable/ic_double_arrow_up_18dp_white" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_material"
            android:layout_weight="0.6"
            android:background="?selectableItemBackgroundBorderless"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:maxLines="3"

            android:textColor="@color/text_color_white_black" />

        <ImageButton
            android:id="@+id/cancel_ibtn"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginEnd="@dimen/material_big"
            android:layout_marginStart="@dimen/margin_material"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_clear_gray_24dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>