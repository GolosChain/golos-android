<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_black_toolbar_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/material_big"
    android:paddingEnd="@dimen/margin_material"
    android:paddingStart="@dimen/margin_material"
    android:paddingTop="@dimen/material_huge">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/link_name"
        android:textColor="@color/text_color_white_black"

        android:textColorHint="@color/gray_82" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/link_address"
        android:textColor="@color/text_color_white_black"
        android:textColorHint="@color/gray_82" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="OK"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorAccent" />
</LinearLayout>