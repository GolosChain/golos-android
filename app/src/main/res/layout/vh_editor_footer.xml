<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_lo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/controlls_lo"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_tags_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material"
        android:layout_marginTop="@dimen/material_big"
        android:text="@string/add_max_five_tags"
        android:textColor="@color/rat" />

    <com.wefika.flowlayout.FlowLayout
        android:id="@+id/tags_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material_big"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/margin_material"
            android:layout_marginTop="@dimen/margin_material_small"
            android:background="@drawable/round_pink_outline"
            android:paddingBottom="2dp"
            android:text="+"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp" />
    </com.wefika.flowlayout.FlowLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_material"
        android:layout_marginStart="@dimen/margin_material"
        android:layout_marginTop="@dimen/material_huge"
        android:animateLayoutChanges="true"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tags_et"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_tag_name"
            android:inputType="text|textMultiLine"
            android:maxLines="2"
            android:textColorHint="@color/rat"
            android:textSize="14sp"
            app:backgroundTint="@color/colorPrimaryDark" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TextInputLayout>
</LinearLayout>

