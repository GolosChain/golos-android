<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:animateLayoutChanges="true"
                                                   android:background="?selectableItemBackground"
                                                   android:clickable="true"
                                                   android:minHeight="100dp">

    <TextView
        android:id="@+id/upvote_btn"
        style="@style/StripeBtn"
        android:layout_marginStart="@dimen/margin_material"
        android:layout_marginTop="@dimen/margin_material_small"
        android:drawableStart="@drawable/ic_like_20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_upvote"
        style="@style/StripeCardProgress"

        app:layout_constraintBottom_toBottomOf="@id/upvote_btn"
        app:layout_constraintEnd_toEndOf="@id/upvote_btn"
        app:layout_constraintStart_toStartOf="@id/upvote_btn"
        app:layout_constraintTop_toTopOf="@id/upvote_btn"/>


    <TextView
        android:id="@+id/money_tv"
        style="@style/StripeBtn"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/margin_material_small"
        android:background="@drawable/shape_rect_gray_stroke"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="10"
        android:paddingStart="@dimen/margin_material_half"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/margin_material_half"
        android:paddingBottom="2dp"
        app:layout_constraintStart_toStartOf="@id/upvote_btn"
        app:layout_constraintTop_toBottomOf="@id/upvote_btn"

        />

    <TextView
        android:id="@+id/down_vote_btn"
        style="@style/StripeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/margin_material_small"
        android:background="@drawable/img_round_ripple_gray"
        android:drawableStart="@drawable/ic_dizlike_20dp"

        app:layout_constraintStart_toStartOf="@id/upvote_btn"
        app:layout_constraintTop_toBottomOf="@id/money_tv"
        />

    <ProgressBar
        android:id="@+id/progress_downvote"
        style="@style/StripeCardProgress"
        app:layout_constraintBottom_toBottomOf="@id/down_vote_btn"
        app:layout_constraintEnd_toEndOf="@id/down_vote_btn"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/down_vote_btn"
        app:layout_constraintTop_toTopOf="@id/down_vote_btn"
        app:layout_constraintVertical_chainStyle="spread"/>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        app:constraint_referenced_ids="down_vote_btn, money_tv, upvote_btn "
        app:barrierDirection="end"
        android:id="@+id/barr_1"
        android:layout_height="wrap_content"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatar_iv"

        android:layout_width="@dimen/feed_story_authe_avatar_size"
        android:layout_height="@dimen/feed_story_authe_avatar_size"
        android:layout_marginStart="@dimen/margin_material"
        android:background="@drawable/img_round_ripple_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/barr_1"
        app:layout_constraintTop_toTopOf="@id/upvote_btn"
        app:layout_goneMarginStart="@dimen/margin_material_half"
        app:riv_corner_radius="18dp"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_material"

        android:textColor="@color/gray_82"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_iv"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name"
        style="@style/TitleUserNameStyle"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_material_half"
        android:background="@drawable/img_round_ripple_gray"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@id/time_tv"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toTopOf="@id/avatar_iv"
        />

    <TextView
        android:id="@+id/user_nick_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material_half"
        android:gravity="center_vertical"
        android:lines="1"

        android:textColor="@color/gray_82"
        android:textSize="@dimen/font_small"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/user_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reblogged_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material_half"
        android:layout_marginEnd="@dimen/margin_material"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:textColor="@color/gray_82"
        android:textSize="@dimen/font_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_nick_name_tv"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        />

    <ImageView
        android:id="@+id/bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material_half"
        android:layout_marginTop="@dimen/quater"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/user_nick_name_tv"
        app:srcCompat="@drawable/ic_bullet_10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/blog_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="@dimen/margin_material"
        android:drawablePadding="2dp"
        android:ellipsize="end"

        android:gravity="center_vertical|start"
        android:lines="1"
        android:paddingBottom="2dp"

        android:textColor="@color/text_color_white_black"
        android:textSize="@dimen/font_small"
        app:layout_constraintBottom_toBottomOf="@id/bullet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bullet"
        app:layout_constraintTop_toBottomOf="@id/user_nick_name_tv"
        app:layout_constraintTop_toTopOf="@id/bullet"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/StripeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_material_half"
        android:layout_marginEnd="@dimen/margin_material"
        android:clickable="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/blog_name_tv"
        app:textAllCaps="false"/>

    <TextView
        android:id="@+id/main_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quater"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/gray_82"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="@dimen/margin_material"
        android:background="@drawable/img_round_ripple_gray"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upvote_btn"
        app:riv_corner_radius="8dp"/>


    <View
        android:id="@+id/delimeter"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_material_half"
        android:background="@color/delimeter_color_feed"
        app:layout_constraintTop_toBottomOf="@+id/down_vote_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>
