<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:animateLayoutChanges="true"
                                                   android:background="?selectableItemBackground"
                                                   android:clickable="true"
    >

    <ImageButton
        android:id="@+id/footer_upvote_ibtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/margin_material_half"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_liked_20dp"/>

    <TextView
        android:id="@+id/footer_upvote_btn"
        style="@style/StripeBtn"
        android:layout_marginTop="@dimen/margin_material_small"

        android:text="12"
        app:layout_constraintStart_toEndOf="@id/footer_upvote_ibtn"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/footer_progress_upvote"
        style="@style/StripeCardProgress"

        app:layout_constraintBottom_toBottomOf="@id/footer_upvote_btn"
        app:layout_constraintEnd_toEndOf="@id/footer_upvote_btn"
        app:layout_constraintStart_toStartOf="@id/footer_upvote_ibtn"
        app:layout_constraintTop_toTopOf="@id/footer_upvote_btn"/>


    <TextView
        android:id="@+id/footer_money_tv"
        style="@style/StripeBtn"
        android:layout_marginStart="@dimen/margin_material_half"

        android:layout_marginTop="4dp"
        android:background="@drawable/shape_rect_gray_stroke"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="10"
        android:minHeight="0dp"
        android:paddingStart="@dimen/margin_material_half"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/margin_material_half"
        android:paddingBottom="2dp"
        android:text="234"
        app:layout_constraintStart_toStartOf="@id/footer_upvote_ibtn"
        app:layout_constraintTop_toBottomOf="@id/footer_upvote_ibtn"
        app:layout_goneMarginStart="@dimen/margin_material_half"

        />


    <ImageButton
        android:id="@+id/down_vote_ibtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/margin_material_half"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/margin_material_small"
        android:background="@drawable/ripple_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/footer_money_tv"
        app:srcCompat="@drawable/ic_dizlike_20dp"/>

    <TextView
        android:id="@+id/footer_down_vote_btn"
        style="@style/StripeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_round_ripple_gray"
        android:text="12"
        app:layout_constraintStart_toEndOf="@id/down_vote_ibtn"
        app:layout_constraintTop_toTopOf="@id/down_vote_ibtn"
        />

    <ProgressBar
        android:id="@+id/footer_progress_downvote"
        style="@style/StripeCardProgress"
        app:layout_constraintBottom_toBottomOf="@id/footer_down_vote_btn"
        app:layout_constraintEnd_toEndOf="@id/footer_down_vote_btn"

        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/down_vote_ibtn"
        app:layout_constraintTop_toTopOf="@id/footer_down_vote_btn"
        app:layout_constraintVertical_chainStyle="spread"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barr_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="footer_down_vote_btn, footer_money_tv, footer_upvote_btn "/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatar_iv"

        android:layout_width="@dimen/feed_story_authe_avatar_size"
        android:layout_height="@dimen/feed_story_authe_avatar_size"
        android:layout_marginStart="@dimen/margin_material"
        android:background="@drawable/img_round_ripple_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/barr_1"
        app:layout_constraintTop_toTopOf="@id/footer_upvote_btn"
        app:layout_goneMarginStart="@dimen/margin_material_small"
        app:riv_corner_radius="18dp"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_material"

        android:textColor="@color/gray_82"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_iv"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name"
        style="@style/TitleUserNameStyle"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_material_half"
        android:background="@drawable/img_round_ripple_gray"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@id/time_tv"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toTopOf="@id/avatar_iv"
        />

    <ImageView
        android:id="@+id/bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material_half"
        android:layout_marginTop="@dimen/quater"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:srcCompat="@drawable/ic_bullet_10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/blog_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="@dimen/margin_material"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="center_vertical|start"

        android:lines="1"
        android:paddingBottom="2dp"
        android:textColor="@color/text_color_white_black"
        android:textSize="@dimen/font_small"
        app:layout_constraintBottom_toBottomOf="@id/bullet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bullet"
        app:layout_constraintTop_toBottomOf="@id/user_nick_name_tv"
        app:layout_constraintTop_toTopOf="@id/bullet"
        />

    <TextView
        android:id="@+id/user_nick_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material_half"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/gray_82"
        android:textSize="@dimen/font_small"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/blog_name_tv"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reblogged_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material_half"
        android:layout_marginEnd="@dimen/margin_material"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:textColor="@color/gray_82"
        android:textSize="@dimen/font_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_nick_name_tv"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/StripeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/margin_material_half"
        android:clickable="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/reblog_btn"
        app:layout_constraintStart_toStartOf="@id/avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/user_nick_name_tv"
        app:textAllCaps="false"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_material_half"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/text_color_white_black"
        android:textSize="@dimen/font_small"
        app:layout_constraintEnd_toStartOf="@id/reblog_btn"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <ImageView
        android:id="@+id/reblog_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/margin_material_half"
        android:background="@drawable/ripple_oval"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_tv"
        app:srcCompat="@drawable/ic_repost_20dp"/>

    <ProgressBar
        android:id="@+id/reblog_progress"
        style="@style/StripeCardProgress"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/reblog_btn"
        app:layout_constraintEnd_toEndOf="@id/reblog_btn"
        app:layout_constraintStart_toStartOf="@id/reblog_btn"
        app:layout_constraintTop_toTopOf="@id/reblog_btn"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="@dimen/margin_material"
        android:background="@drawable/img_round_ripple_gray"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footer_upvote_btn"
        app:riv_corner_radius="8dp"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/ba_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv, down_vote_ibtn"
        />

    <View
        android:id="@+id/delimeter"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/quater"
        android:background="@color/delimeter_color_feed"
        app:layout_constraintTop_toBottomOf="@+id/ba_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
