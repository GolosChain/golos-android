<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="center_horizontal|top"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:titleEnabled="false">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_black_toolbar_color"
                android:gravity="center"
                app:navigationIcon="@drawable/ic_chevron_left_24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textColor="@color/text_color_white_black"/>

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/settings_content_scroll"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/material_big"
                android:layout_marginBottom="@dimen/material_big"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_big"
                    android:layout_marginEnd="@dimen/material_big"
                    android:text="@string/general_settings"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_big"
                    android:layout_marginTop="@dimen/margin_material_half"
                    android:layout_marginEnd="@dimen/material_big"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_lang"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/lang_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:gravity="end"/>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_big"
                    android:layout_marginEnd="@dimen/material_big"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/currency_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:gravity="end"/>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_big"
                    android:layout_marginEnd="@dimen/material_big"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency_precision"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/precision_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:gravity="end"/>
                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/notifications_tv"
                    style="@style/SettingTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/material_big"
                    android:layout_marginEnd="@dimen/material_big"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:text="@string/notifications"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:id="@+id/default_vote_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_big"
                        android:layout_marginEnd="@dimen/material_big"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SettingTextViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="0.8"
                            android:text="@string/default_vote_power"
                            android:textStyle="bold"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/default_vote_switch"
                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="end|center_vertical"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/golos_power_spinner_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/quater"
                        android:background="@drawable/golos_power_tooltip"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="1dp"
                        android:paddingBottom="8dp"
                        android:text="1%"
                        android:textSize="11dp"
                        android:visibility="gone"

                        app:layout_constraintBottom_toTopOf="@id/default_vote_seeker"/>

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/default_vote_seeker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_material"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/margin_material"
                        android:thumb="@drawable/shape_oval_blue_22dp"
                        app:layout_constraintTop_toBottomOf="@id/default_vote_lo"/>

                    <TextView
                        android:id="@+id/first_l"
                        style="@style/SettingSeekerLabel"
                        android:layout_marginStart="5dp"
                        android:text="0%"
                        app:layout_constraintStart_toStartOf="@id/default_vote_seeker"
                        app:layout_constraintTop_toBottomOf="@id/default_vote_seeker"/>

                    <TextView
                        android:id="@+id/second_l"
                        style="@style/SettingSeekerLabel"
                        android:text="50%"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/default_vote_seeker"
                        app:layout_constraintTop_toBottomOf="@id/default_vote_seeker"/>

                    <TextView
                        android:id="@+id/third_l"
                        style="@style/SettingSeekerLabel"
                        android:text="100%"
                        app:layout_constraintEnd_toEndOf="@id/default_vote_seeker"
                        app:layout_constraintTop_toBottomOf="@id/default_vote_seeker"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_big"
                    android:layout_marginTop="@dimen/margin_material"
                    android:layout_marginEnd="@dimen/material_big"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@string/vote_for_youtself"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/vote_for_yourself_switch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"

                        android:gravity="end|center_vertical"/>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/delimeter_color_feed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_big"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingTitleTextView"
                    android:text="@string/stripe_settings"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_material_half"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mode"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/mode_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:gravity="end"/>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@string/compact_mode"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/compact_mode_switch"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="end|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@string/images_mode"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_images_switch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="end|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SettingTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@string/show_nsfw_images_mode"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_nsfw_images_switch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="end|center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/delimeter_color_feed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_big"
                android:layout_marginEnd="@dimen/material_big"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/golos_wiki_tv"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/wiki"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about_golos_tv"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/about_golos"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/privacy_policy_tv"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/privacy_policy"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about_team_tv"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/about_team"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/faq"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/faq"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/team_news_tv"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/team_news"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/exit"
                    style="@style/SettingTextViewStyle"
                    android:background="?selectableItemBackground"
                    android:text="@string/exit"/>


            </LinearLayout>

            <TextView
                android:id="@+id/version_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:text="@string/golos_android_v"
                android:textColor="#A6A6A6"
                android:textSize="@dimen/font_small"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>